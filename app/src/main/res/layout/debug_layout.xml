<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.jack_pc.internet_practicev10.MainActivity"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="188dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <EditText
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:id="@+id/editText_IP"
                android:hint="Server IP"
                android:text="192.168.1.203" />

            <EditText
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:id="@+id/editText_port"
                android:hint="Port"
                android:text="7" />
        </LinearLayout>

        <EditText
            android:layout_width="153dp"
            android:layout_height="wrap_content"
            android:id="@+id/editText_device"
            android:hint="Device name"
            android:layout_marginLeft="30dp"
            android:text="Device" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/echoResult"
        android:fillViewport="false"
        android:layout_weight="0.97">
        <TextView
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:id="@+id/mDataField"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:textSize="15sp" />
    </ScrollView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:layout_width="291dp"
            android:layout_height="wrap_content"
            android:id="@+id/editText_send"
            android:hint="Command" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Send"
            android:id="@+id/button_send"
            android:layout_column="29"
            android:onClick="onClick"
            android:layout_gravity="center_horizontal" />
    </LinearLayout>






</LinearLayout>
